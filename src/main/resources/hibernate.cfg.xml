<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:postgresql://fm-toolbox.duckdns.org:5433/shoptop</property> <!-- DB Name -->
        <property name="connection.driver_class">org.postgresql.Driver</property> <!-- DB Driver -->
        <property name="connection.username">test</property> <!-- DB User -->
        <property name="connection.password">test</property> <!-- DB Password -->
        <property name="hbm2ddl.auto">update</property> <!-- create / create-drop / update -->
        <property name="show_sql">true</property> <!-- Show SQL in console -->
        <property name="format_sql">true</property> <!-- Show SQL formatted -->
        <property name="hibernate.connection.autocommit">true</property>

        <mapping class="am.tech42.Item"/>



    </session-factory>
</hibernate-configuration>